<div class="container">

  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?",
        } do %>
        <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </li>

    <% end %>
  </ul>
  <p class=tasks><%= link_to "Create new task", tasks_new_path %></p>
</div>
